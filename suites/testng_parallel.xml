<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Demo presta shop tests" parallel="methods" thread-count="2">
    <listeners>
        <listener class-name="core.MyTestListener"/>
    </listeners>

    <test name="Valid info text tests">
        <classes>
            <class name="prestaShopTests.CheckingForValidTextInformationTest"/>
            <class name="prestaShopTests.CheckLanguagesTest"/>
        </classes>
    </test>

    <test name="Registration account tests">
        <classes>
            <class name="prestaShopTests.RegistrationAccountTest"/>
        </classes>
    </test>

    <test name="Check visibility sub menu of categories test">
        <classes>
            <class name="prestaShopTests.CheckCategoriesTest"/>
        </classes>
    </test>

    <test name="Check valid date of products blocks tests">
        <classes>
            <class name="prestaShopTests.CheckPopularProductsTest"/>
            <class name="prestaShopTests.CheckPriceDropTest"/>
        </classes>
    </test>


</suite>

